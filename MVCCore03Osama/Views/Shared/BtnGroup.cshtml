@model string

<div class="btn-group" role="group" aria-label="Basic example">
    <button onclick="getDetails('@Model')" data-toggle="modal" data-target="#detailmodal" class="btn btn-sm btn-success text-white"><i class="fa fa-eye"></i></button>
    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Instructor",new {id=Model}, Context.Request.Scheme)', 'Edit Instructor')" class="btn btn-sm btn-primary text-white">
        <i class="fa fa-edit"></i>
    </a>
    <a onclick="deleteIns('@Model')" class="btn btn-danger btn-sm text-white"><i class="fa fa-trash"></i></a>
    <div class="modal fade" id="deletemodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Delete?
                </div>
                <div class="modal-footer">
                    <button onclick="deleteIns('@Model')" type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Delete</button>
                </div>
            </div>
        </div>
    </div>

</div>





<div class="modal fade" id="detailmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                FName: <span id="fname"></span>
                <br />
                LName: <span id="lname"></span>
                <br />
                Email: <span id="email"></span>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>