                        </div>

                          `;
        $("#addCh").before(choiceInput);
    }

    

    function ChooseType(y) {
        console.log($('#QueType').val());
        if ($('#QueType').val() == "Essay") {

            $('#forEssay').show();

            $('#forChoice').hide();
            $('#forTF').hide();
        } else if ($('#QueType').val() == "TF") {
            $('#forTF').show();

            $('#forEssay').hide();
            $('#forChoice').hide();
        } else {
            $('#forChoice').show();
            $('#forEssay').hide();
            $('#forTF').hide();
