            success: function (Data) {
                console.log(JSON.parse(Data));
                QueIDObj.QueID = JSON.parse(Data);

            },
            error: function (e) { console.log(e) }
        });
        }
    }
    var count = 0;
    function AddChoice() {
        if (count >= 5) {
            alert("Maximum nuber of chicec is 6");
            $('#addCh').hide();
