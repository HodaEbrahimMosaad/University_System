<!-- card1 start -->
<div class="col-md-6 col-xl-3">
    <div class="card widget-card-1">
        <div class="card-block-small">

            <i class="icofont bg-c-blue card1-icon"><i class="fa fa-user-graduate"></i></i>
            <span class="text-c-blue f-w-600">Students</span>
            <h4>@ViewBag.studentsCount</h4>
            <div>
                <span class="f-left m-t-10 text-muted">
                    <i class="text-c-blue f-16 icofont icofont-warning m-r-10"></i>Follow Up Students
                </span>
            </div>
        </div>
    </div>
</div>
<!-- card1 end -->
