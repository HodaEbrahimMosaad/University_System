@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Posts" asp-action="Index" asp-route-id="1" title="Discussion">Cours1</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Materials" asp-action="Index" asp-route-courseId="1" title="Material">Cours2</a>
                    @*Html.ActionLink("Material", "Index", "Materials")*@
                </li>
            </ul>
        </nav>
        <div class="row">
            <ul class="list-group col-lg-2">
                <li class="list-group-item active" aria-current="true">
                    @Html.ActionLink("Lec 1", "Index", "Posts")
                </li>
                <li class="list-group-item"> @Html.ActionLink("Lec 2", "Index", "Posts")</li>
                <li class="list-group-item">A third item</li>
                <li class="list-group-item">A fourth item</li>
                <li class="list-group-item">And a fifth one</li>
            </ul>
            <div class="col-lg-10">
                <div class="container px-4">
                    <div class="row gx-5">
                        <div class="col">
                            <div class="p-0 border-dark "><a class="nav-link" asp-controller="Posts" asp-action="Index" title="Discussion">Discussion</a></div>
                        </div>
                        <div class="col">
                            <div class="p-0 border-0 "><a class="nav-link" asp-controller="Materials" asp-action="Index" title="Material">Material</a></div>
                        </div>
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
        </html>
